rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && 
             request.auth.token.admin == true;
    }
    
    // Sacrament submissions collection
    match /sacrament-submissions/{submissionId} {
      // Allow anyone to create (submit forms)
      allow create: if true;
      
      // Only authenticated users can read their own submissions
      // Or admins can read all
      allow read: if isAdmin();
      
      // Only admins can update or delete
      allow update, delete: if isAdmin();
    }
    
    // Join-us submissions collection (volunteer & church member)
    match /join-us-submissions/{submissionId} {
      // Allow anyone to create (submit forms)
      allow create: if true;
      
      // Only admins can read, update, or delete
      allow read, update, delete: if isAdmin();
    }
    
    // Mass intentions submissions collection
    match /mass-intentions-submissions/{submissionId} {
      // Allow anyone to create (submit forms)
      allow create: if true;
      
      // Only admins can read, update, or delete
      allow read, update, delete: if isAdmin();
    }
    
    // Donations submissions collection
    match /donations-submissions/{submissionId} {
      // Allow anyone to create (submit forms)
      allow create: if true;
      
      // Only admins can read, update, or delete
      allow read, update, delete: if isAdmin();
    }
    
    // Contact us submissions collection
    match /contact-us-submissions/{submissionId} {
      // Allow anyone to create (submit forms)
      allow create: if true;
      
      // Only admins can read, update, or delete
      allow read, update, delete: if isAdmin();
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
